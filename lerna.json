{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "0.1.0",
    "npmClient": "yarn",
    "command": {
        "version": {
            "ignoreChanges": [
                "examples/**",
                "**/*.md",
                "**/*.test.ts",
                "**/*.spec.ts"
            ],
            "push": false,
            "gitTagVersion": false,
            "createRelease": "github"
        },
        "publish": {
            "access": "public",
            "ignoreChanges": [
                "examples/**",
                "**/*.md",
                "**/*.test.ts",
                "**/*.spec.ts"
            ]
        }
    }
}
