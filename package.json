{
  "name": "meshql",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "version": "0.1.0",
  "scripts": {
    "clean": "rimraf coverage .nyc_output 'packages/*/dist' 'examples/*/dist' 'node_modules/.cache' 'packages/*/node_modules' 'examples/*/node_modules'",
    "clean:all": "yarn clean && rimraf node_modules",
    "build": "lerna run build",
    "qb": "lerna run build --since main",
    "test": "yarn vitest --run --coverage --reporter=junit --outputFile=test-report.junit.xml",
    "qt": "lerna run test --since main",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "start": "node ./packages/meshql/dist/cli.js --config config/config.conf"
  },
  "dependencies": {
    "pnpm": "^9.15.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^14.0.0",
    "lcov-result-merger": "^5.0.1",
    "lerna": "^8.1.9",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  },
  "resolutions": {
    "graphql": "^15.10.1",
    "express-graphql": "^0.12.0",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.17",
    "typescript": "^5.7.3",
    "mongodb": "^6.13.0",
    "handlebars": "^4.7.8",
    "vitest": "^2.1.9"
  },
  "packageManager": "yarn@4.6.0",
  "type": "module"
}
