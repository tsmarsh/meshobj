{
    "name": "meshql",
    "private": true,
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "version": "0.1.0",
    "scripts": {
        "clean": "rimraf \"packages/*/dist\" && rimraf \"examples/*/dist\"",
        "clean:all": "rimraf \"packages/*/dist\" && rimraf \"examples/*/dist\" && rimraf \"node_modules\" && rimraf \"packages/*/node_modules\" && rimraf \"examples/*/node_modules\"",
        "build": "lerna run build",
        "qb": "lerna run build --since main",
        "test": "yarn vitest --run --coverage --reporter=junit --outputFile=test-report.junit.xml",
        "qt": "lerna run test --since main",
        "coverage": "yarn run c8 report --report-dir=.nyc_output --reporter=text --reporter=html --reporter=lcov",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "start": "node ./packages/meshql/dist/cli.js --config config/config.conf",
        "publish": "lerna publish --no-private"
    },
    "dependencies": {
        "pnpm": "^9.15.3"
    },
    "devDependencies": {
        "@eslint/js": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^2.1.9",
        "c8": "^10.1.3",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "globals": "^14.0.0",
        "lcov-result-merger": "^5.0.1",
        "lerna": "^8.1.9",
        "prettier": "^3.2.0",
        "typescript": "^5.7.3",
        "vitest": "^2.1.9"
    },
    "resolutions": {
        "@types/express": "^4.17.17",
        "@types/express-serve-static-core": "^4.17.17",
        "graphql": "^15.8.0",
        "typescript": "^5.7.3",
        "mongodb": "^6.13.0",
        "handlebars": "^4.7.8"
    },
    "packageManager": "yarn@4.6.0",
    "type": "module"
}
